{
  "extends": "google",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "no-var": "off",
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": [
      "error",
      "double",
      {
        "avoidEscape": true
      }
    ],
    "semi": ["error", "always"],
    "max-len": [
      "warn",
      {
        "ignoreComments": true
      }
    ],
    "prefer-spread": ["off"],
    "prefer-rest-params": ["off"],
    "camelcase": ["off"]
  }
}
